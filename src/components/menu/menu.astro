---
import './menu.css';
---

<nav style="position: fixed; top: 0; left: 0; width: 100%; z-index: 1000; background: transparent;">
  <div id="menu-trigger" class="nav-link">
    Menu
  </div>
</nav>

<div id="menu-backdrop"></div>

<div id="expanded-menu">
  <div id="sub-menu" class="content">
    <div class="menu-item" data-section="#productos">
      <img src="https://images.unsplash.com/photo-1554118811-1e0d58224f24?w=800&q=80"  alt="Coffee" />
      <div class="menu-overlay">Café</div>
    </div>
    <div class="menu-item" data-section="#historia">
      <img src="https://images.unsplash.com/photo-1495474472287-4d71bcdd2085?w=800&q=80"  alt="Espresso" />
      <div class="menu-overlay">Nosotros</div>
    </div>
    <div class="menu-item" data-section="#ubicacion">
      <img src="https://images.unsplash.com/photo-1511920170033-f8396924c348?w=800&q=80"  alt="Latte" />
      <div class="menu-overlay">Ubicación</div>
    </div>
  </div>
</div>

<script src="./menu.js"></script>
